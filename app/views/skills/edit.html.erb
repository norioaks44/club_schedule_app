<%= render "shared/skills-second-header"%>

<div class="skill-body">

  <%= form_with model: @skill, url: skill_path, class:'form-wrap', local: true do |form| %>
    <%= render 'shared/error_messages', model: form.object %> 

    <h1 class="new-skill-title">
      編集
    </h1>

    <div class="form-body">

      <div class="form-box">
        <div class="form-title">
          <%= form.label :drill_name, "タイトル"%>
        </div>
        <div class='form'>
          <div class="side-form">
          </div>
          <div class="main-form">
            <%= form.text_field :drill_name, class:"input-form" %>
          </div>
        </div>
      </div>

      <div class="form-box">
        <div class="form-title">
          <%= form.label :genre_id, "ジャンル"%>
        </div>
        <div class="form">
          <div class="side-form">
          </div>
          <div class="main-form">
            <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select"}) %>
          </div>
        </div>
      </div>

      <div class="form-box">
        <div class="form-title">
          <%= form.label :category_id, "対象ポジション"%>
        </div>
        <div class="form">
          <div class="side-form"></div>
          <div class="main-form">
            <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select"}) %>
          </div>
        </div>
      </div>
      
      <div class="form-box">
        <div class="form-title">
          <%= form.label :info, "解説"%>
        </div>
        <div class="form">
          <div class="side-form"></div>
          <div class="skill-info-form">
              <%= form.text_area :info, class:"input-form", rows: "7", maxlength:"1000" %>
          </div>
        </div>
      </div>

      <div class="form-box">
        <div class="form-title">
          <%= form.label :image, "画像 (jpg, png, gif)"%>
        </div>
        <div class="media-form">
            <%= form.file_field :image %>
        </div>
      </div>


      <div class="form-box">
        <div class="form-title">
          <%= form.label :video, "動画 (mp4, mov)"%>
        </div>
        <div class="media-form">
            <%= form.file_field :video %>
        </div>
      </div>

    
      <div class="submit-post">
        <%= form.submit '登録' ,class:"submit-btn" %>
      </div>
      <div>
        <%=link_to 'もどる', skills_path, class:"back-btn" %>
      </div>

    </div>
  <% end %>


</div>
