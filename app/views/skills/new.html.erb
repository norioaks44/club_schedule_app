<%= form_with model: @skill, url: skills_path, class:'form-wrap', local: true do |form| %>
  <%= render 'shared/error_messages', model: form.object %> 


<div class='page-form'>

  <div class='page-field'>
    <%= form.label :drill_name, "Name"%>
    <%= form.text_field :drill_name, class:"input-form" %>
  </div>

  <div>
    <%= form.label :genre_id, "ジャンル"%>
    <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select"}) %>
  </div>

  <div>
    <%= form.label :category_id, "対象ポジション"%>
    <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select"}) %>
  </div>
  
  <div class='page-field'>
    <%= form.label :info, "info"%>
    <%= form.text_area :info, class:"input-form" %>
  </div>

  <%= form.label :image, "image(jpg, png, gif)"%>
  <%= form.file_field :image %>
  
  <%= form.label :video, "video(mp4, mov)"%>
  <%= form.file_field :video %>

</div>
  
  <div class="submit-post">
    <%= form.submit '登録' ,class:"submit-btn" %>
  </div>
  <div>
    <%=link_to 'もどる', skills_path, class:"back-btn" %>
  </div>

<% end %>