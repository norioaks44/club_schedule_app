<div class="login-body">
<div class="login-title">ログイン</div>

<div class="login-main">
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
  <%= form_with model: @user, url: user_session_path, local: true do |f| %>


      <label class="weight-bold-text">メールアドレス</label>
      <div class="field">
        <div class="side-field"></div>
        <div class="main-field">
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
      </div>

      <label class="weight-bold-text">パスワード</label>
      <div class="field">
        <div class="side-field">
        </div>
        <div class="main-field">
          <%= f.password_field :password, class:"input-default", id:"password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

        <div class="regist-btn-contents">
          <div class="send-link">
            <%= f.submit "ログイン", class:"create-btn" %>
            <%= link_to user_google_oauth2_omniauth_authorize_path, class:"google-signup", method: :post do %>
            <%= image_tag "google_logo.jpg", class:"google-logo"%>
            <span class="google-comment">Googleで登録</span>
            <% end %>
          </div>
        </div>
  <% end %>

</div>
</div>
