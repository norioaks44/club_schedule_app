<header class="top-page-header">
  <%= link_to "Club Shcedule", "root_path", class:"page-title"%>

  <div>
    <ul>
      <%if user_signed_in? %>
        <li><%= link_to current_user.name, "#", class: "user-name" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %> </li>
      <% else %>
