<header class="top-page-header">
<h1 class="page-title"><%= image_tag asset_path("logo.png"), class:"logo-pic" %></h1>

  <div class="account-status">
      <%if user_signed_in? %>
        <div class="account-btn">
          <%= current_user.name %>
        </div>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "account-btn" %>
      <% else %>
          <%= link_to 'ログイン', new_user_session_path, class: "account-btn" %>
          <%= link_to '新規登録', new_user_registration_path, class: "account-btn" %>
      <% end %>
  </div>
</header>
